{
  "private": true,
  "name": "@galacsh/vtls",
  "description": "Vite + Typescript library starter.",
  "version": "0.0.1",
  "author": "Galacsh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Galacsh/vite-typescript-library-starter.git"
  },
  "bugs": {
    "url": "https://github.com/Galacsh/vite-typescript-library-starter/issues"
  },
  "keywords": [
    "vite",
    "typescript"
  ],
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "test:once": "vitest run",
    "build:only": "tsc && vite build",
    "build": "npm run test:once && npm run build:only",
    "lint": "eslint --fix . && prettier --write .",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "type": "module",
  "main": "./dist/vtls.umd.cjs",
  "module": "./dist/vtls.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/vtls.js",
      "require": "./dist/vtls.umd.cjs"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,md}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^0.34.6"
  }
}
